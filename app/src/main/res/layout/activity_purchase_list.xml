<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexfengli.bancatec.PurchaseListActivity">

    <TextView
        android:id="@+id/txtHC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial de Compras"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/txtSDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha inicio:"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="41dp" />

    <EditText
        android:id="@+id/eFDate"
        android:layout_width="106dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="date"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="33dp" />

    <EditText
        android:id="@+id/eSdate"
        android:layout_width="106dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="date"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/txtFDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fehca Final:"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="41dp" />

    <Button
        android:id="@+id/pBcancel"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:text="Cancelar"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="-1dp" />

    <Button
        android:id="@+id/pBshow"
        android:layout_width="94dp"
        android:layout_height="42dp"
        android:text="Mostrar"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="-1dp" />

    <ListView
        android:id="@+id/pHistoryList"
        android:layout_width="368dp"
        android:layout_height="536dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="84dp" />
</android.support.constraint.ConstraintLayout>
